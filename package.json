{
  "name": "mychannel",
  "version": "1.0.3",
  "description": "Media player app called MyChannel",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "electron": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "gerna-v1",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^32.1.0",
    "tailwindcss": "^3.4.7"
  },
  "dependencies": {
    "electron": "^32.1.0",
    "electron-squirrel-startup": "^1.0.3"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "build": {
    "appId": "gerna-v1.mychannel.100",
    "productName": "MyChannel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/*",
      "index.js",
      "package.json",
      "preload.js",
      "img/*",
      "img/applogo.*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "bucket",
        "to": "bucket"
      }
    ],
    "win": {
      "icon": "img/applogo.ico"
    },
    "mac": {
      "icon": "img/applogo.icns"
    },
    "linux": {
      "icon": "img/applogo.png"
    }
  }
}
